<?xml version="1.0" encoding="utf-8" ?>
<config>
  <tabs>
    <teorema translate="label" module="teorema_cart">
      <label>Teorema Configuração</label>
      <sort_order>200</sort_order>
    </teorema>
  </tabs>
  <sections>
    <teorema translate="label" module="teorema_cart">
        <label>Teorema</label>
        <tab>teorema</tab>
        <sort_order>200</sort_order>
        <show_in_default>1</show_in_default>
        <show_in_website>1</show_in_website>
        <show_in_store>1</show_in_store>
        <groups>
              <teorema_cart translate="label" module="catalog">
                  <label>Configurações de carrinhos abandonados Teorema</label>
                  <frontend_type>text</frontend_type>
                  <sort_order>1</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
                  <fields>
                      <active translate="label">
                          <label>Habilitado</label>
                          <frontend_type>select</frontend_type>
                          <source_model>adminhtml/system_config_source_yesno</source_model>
                          <sort_order>1</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                      </active>


                      <time_to_first translate="label">
                          <label>Tempo para Primeiro envio carriho em horas:</label>
                          <comment>Ex.: 1</comment>
                          <frontend_type>text</frontend_type>
                          <sort_order>10</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                      </time_to_first>


                      <time_to_second translate="label">
                          <label>Tempo para Primeiro envio Segundo carriho em dias:</label>
                          <comment>Ex.: 1</comment>
                          <frontend_type>text</frontend_type>
                          <sort_order>30</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                      </time_to_second>



                      <time_to_third translate="label">
                          <label>Tempo para Primeiro envio  Terceiro carriho em dias:</label>
                          <comment>Ex.: 1</comment>
                          <frontend_type>text</frontend_type>
                          <sort_order>40</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                      </time_to_third>

                      <promotion_code translate="label">
                          <label>Codigo promocional para terceiro:</label>
                          <comment>Ex.: 1</comment>
                          <frontend_type>text</frontend_type>
                          <sort_order>60</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                      </promotion_code>



                      <promotion_code_second translate="label">
                          <label>Codigo promocional para Segundo carriho:</label>
                          <comment>Ex.: 1</comment>
                          <frontend_type>text</frontend_type>
                          <sort_order>50</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                      </promotion_code_second>



                      <promotion_code_third translate="label">
                          <label>Codigo promocional para terceiro:</label>
                          <comment>Ex.: 1</comment>
                          <frontend_type>text</frontend_type>
                          <sort_order>60</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                      </promotion_code_third>


                  </fields>
              </teorema_cart>
          </groups>
      </teorema>
  </sections>
</config>
