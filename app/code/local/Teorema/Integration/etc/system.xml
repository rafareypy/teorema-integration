<?xml version="1.0" encoding="utf-8" ?>
<config>
   <sections>
        <catalog>
            <groups>
                <teorema_integration translate="label" module="catalog">
                    <label>Configurações de integração com Teorema</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Habilitado</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <soap_url_wsdl translate="label">
                            <label>soap url wsdl Teorema</label>
                            <comment>Ex.: http://192.168.0.43:5539/send?wsdl</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </soap_url_wsdl>
                        <soap_domain translate="label">
                            <label>soap domain</label>
                            <comment>Ex.: http://192.168.0.43</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </soap_domain>
                        <soap_port translate="label">
                            <label>Porta</label>
                            <comment>Ex.: 5539</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </soap_port>

                        <user translate="label">
                            <label>Usuario</label>
                            <comment>Ex.: ECOMMERCE</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </user>

                        <password translate="label">
                            <label>Senha</label>
                            <comment>Ex.: eco3102</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </password>

                    </fields>
                </teorema_integration>
            </groups>
        </catalog>
    </sections>
</config>
